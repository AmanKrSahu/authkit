# General
PORT=8000
NODE_ENV=development
BASE_PATH="/api/v1"
DOMAIN_URL="localhost"

# Frontend Origins (comma-separated)
FRONTEND_ORIGINS="http://localhost:3000"

# PostgreSQL Database
POSTGRES_USER="your_username"
POSTGRES_PASSWORD="your_password"
POSTGRES_DB="authkit"
DATABASE_URL="postgresql://your_username:your_password@postgres:5432/authkit?schema=public"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:8000/api/v1/oauth/google/callback"

# JWT Authentication
JWT_SECRET="jwt_secret_key"
JWT_EXPIRES_IN="15m"

JWT_REFRESH_SECRET="jwt_refresh_secret_key"
JWT_REFRESH_EXPIRES_IN="7d"

JWT_RESET_SECRET="jwt_reset_secret_key"
JWT_RESET_EXPIRES_IN="10m"

JWT_MFA_LOGIN_SECRET="jwt_mfa_login_secret_key"
JWT_MFA_LOGIN_EXPIRES_IN="5m"

# Resend Email Service
RESEND_API_KEY="your-resend-api"
RESEND_SENDER_EMAIL="noreply@yourdomain.com"

# Authenticator App Secret
AUTHENTICATOR_APP_SECRET="authenticator-app-secret-dev"
